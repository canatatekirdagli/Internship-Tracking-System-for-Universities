
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Kocaeli Üniversitesi Staj/İME Takip ve Değerlendirme Sistemi</title>
    <link href="~/css/sifremiunuttum.css" rel="stylesheet" />
</head>
<body>

    <div class="header">
        <img src="https://www.freelogovectors.net/wp-content/uploads/2018/03/kocaeli-universitesi-logo.png">
        <h2>Kocaeli Üniversitesi / Şifremi Unuttum</h2>
        <h3>Staj/İme Takip ve Değerlendirme Sistemi</h3>
    </div>

    <div class="giriskutusu">
        <img src="https://w7.pngwing.com/pngs/505/761/png-transparent-login-computer-icons-avatar-icon-monochrome-black-silhouette.png" class="avatar">
        <h1>Şifre Yenileme</h1>
        @using (Html.BeginForm("SifremiUnuttum", "OgrenciLogin", FormMethod.Post))
        {
            <form>
                <p>Öğrenci No:</p>
                <input type="text" name="uye_no" placeholder="Öğrenci Numarası ">
                <p>E-mail Adresinizi Giriniz:</p>
                <input type="text" name="uyeEposta" placeholder="E-Mail">
                <input id="sifreunuttum" type="submit" name="" value="Gönder">
                @ViewBag.Mesaj
            </form>
        }
    </div>


</body>
</html>